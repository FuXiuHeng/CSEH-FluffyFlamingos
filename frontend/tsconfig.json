{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "es2017"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		"baseUrl": "./src",
		"sourceMap": true
	},
	"compileOnSave": true,
	"include": ["src"],
	"exclude": ["build", "node_modules/**", "jest.config.js", "src/AppEntry.ts"]
}
